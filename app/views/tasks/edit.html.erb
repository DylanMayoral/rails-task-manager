
<div class="vh-100 d-flex flex-column justify-content-center align-items-center">
 <h1 class="d-flex d-block"><%= @task.title %></h1>
  <div class="mt-3 d-flex d-block flex-column">
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control mb-4 mt-2' %>
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control mt-2' %>
       <div class="my-3 form-check">
          <%= f.check_box :completed, class: "form-check-input" %>
          <%= f.label :completed, class: "form-check-label" %>
        </div>

      <div class="d-flex mt-3">
        <%= f.submit "Submit change", class: 'btn btn-primary mx-3' %>
        <%= link_to "Show All Tasks", tasks_path, class: 'mx-3 btn btn-primary ms-auto' %>
      </div>
    <% end %>
  </div>
</div>
