<div class="vh-100 d-flex flex-column justify-content-center align-items-center">
  <h1 class="d-flex d-block">Task List</h1>
  <div class="mt-3 d-flex d-block">
    <ul>
      <% @tasks.each do |task| %>
        <p>
          <% if task.completed %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          <% end %>
          <strong><%= link_to task.title, task_path(task), class: "text-decoration-none" %></strong>: <%= task.details %>
           <%= link_to "<i class='fa-solid fa-trash'></i>".html_safe, task_path(task), data: { turbo_method: :delete, turbo_confirm: "delete?"} %>
        </p>

      <% end %>
    </ul>
  </div>
  <%= link_to "Create Task", new_task_path, class: "btn btn-primary mt-3" %>
</div>
